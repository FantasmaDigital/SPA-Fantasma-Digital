<script>
  const track = document.querySelector("#servicesTrack");
  const prevBtn = document.querySelector(".nav-prev");
  const nextBtn = document.querySelector(".nav-next");
  let loopWidth = 0;
  let autoId = 0;

  const stepSize = () => {
    const card = track?.querySelector(".service-card");
    if (!card) return 320;
    const rect = card.getBoundingClientRect();
    const gap =
      track instanceof HTMLElement
        ? parseFloat(getComputedStyle(track).columnGap || "0") || 0
        : 0;
    return rect.width + gap;
  };

  const normalizePosition = () => {
    if (!track || !loopWidth) return;
    const max = loopWidth * 2;
    if (track.scrollLeft >= max) {
      track.scrollLeft -= loopWidth;
    } else if (track.scrollLeft <= 0) {
      track.scrollLeft += loopWidth;
    }
  };

  const scrollByAmount = (dir:any) => {
    if (!track) return;
    const distance = dir * stepSize();
    stopAuto();
    track.scrollBy({ left: distance, behavior: "smooth" });
    setTimeout(normalizePosition, 320);
    startAuto();
  };

  const setupInfiniteLoop = () => {
    if (!track) return;
    const cards = Array.from(track.children);
    if (!cards.length) return;

    const before = document.createDocumentFragment();
    const after = document.createDocumentFragment();

    cards.forEach((card) => {
      before.appendChild(card.cloneNode(true));
      after.appendChild(card.cloneNode(true));
    });

    track.prepend(before);
    track.append(after);

    loopWidth = track.scrollWidth / 3;
    track.scrollLeft = loopWidth;
  };

  const autoTick = () => {
    if (!track || !loopWidth) return;
    track.scrollLeft += 0.55;
    normalizePosition();
    autoId = requestAnimationFrame(autoTick);
  };

  const startAuto = () => {
    if (autoId) return;
    autoId = requestAnimationFrame(autoTick);
  };

  const stopAuto = () => {
    if (!autoId) return;
    cancelAnimationFrame(autoId);
    autoId = 0;
  };

  setupInfiniteLoop();
  startAuto();

  prevBtn?.addEventListener("click", () => scrollByAmount(-1));
  nextBtn?.addEventListener("click", () => scrollByAmount(1));

  track?.addEventListener("mouseenter", stopAuto);
  track?.addEventListener("mouseleave", startAuto);
  track?.addEventListener("touchstart", stopAuto, { passive: true });
  track?.addEventListener("touchend", startAuto, { passive: true });
</script>
