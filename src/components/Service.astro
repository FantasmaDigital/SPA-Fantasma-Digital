    font-size: clamp(1.8rem, 4vw, 2.8rem);
    font-weight: 700;
    color: #f5fcff;
  }

  .services-blurb {
    margin: 0;
    color: #dbe6f0;
    line-height: 1.5;
    font-size: clamp(0.95rem, 2vw, 1.05rem);
  }

  .services-carousel {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: 0 clamp(2rem, 3vw, 3rem);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .services-track {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: minmax(240px, 320px);
    gap: clamp(0.9rem, 2vw, 1.4rem);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding: 0.25rem 0;
    scrollbar-width: none;
  }

  .services-track::-webkit-scrollbar {
    display: none;
  }

  .service-card {
    scroll-snap-align: start;
  }

  .card-inner {
    position: relative;
    height: clamp(260px, 36vw, 360px);
    border-radius: 10px;
    background:
      radial-gradient(120% 120% at 20% 15%, rgba(255, 255, 255, 0.04), transparent 55%),
      linear-gradient(145deg, #0b0f16, #040406 55%, #030305);
    border: 1px solid rgba(255, 255, 255, 0.06);
    padding: 1.25rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: 0.55rem;
    transition: transform 0.35s ease, border-color 0.35s ease, box-shadow 0.35s ease;
  }

  .card-inner::after {
    content: "";
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 30% 20%, rgba(255, 204, 51, 0.08), transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(37, 196, 255, 0.08), transparent 45%),
      linear-gradient(180deg, rgba(0, 0, 0, 0.55), rgba(0, 0, 0, 0));
    opacity: 0.8;
    pointer-events: none;
  }

