---
// src/components/Sponsorship.astro
---

<section
  id="sponsorship"
  class="py-16 lg:py-32 bg-white relative overflow-hidden border-t border-black/5"
>
  <!-- Dynamic Background Element -->
  <div
    class="absolute -bottom-24 -left-24 w-96 h-96 bg-[#25c4ff]/20 rounded-full blur-[120px] pointer-events-none"
  >
  </div>
  <div
    class="absolute -top-24 -right-24 w-96 h-96 bg-[#ffcc33]/20 rounded-full blur-[120px] pointer-events-none"
  >
  </div>
  <div
    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full h-[500px] bg-gradient-to-r from-[#25c4ff]/5 via-transparent to-[#ffcc33]/5 blur-[100px] pointer-events-none"
  >
  </div>

  <div class="w-[85%] max-w-[1800px] mx-auto relative z-10">
    <div
      class="bg-gradient-to-b from-black/[0.03] to-transparent border border-black/10 p-6 lg:p-20 relative overflow-hidden group"
    >
      <!-- Decorative Lines -->
      <div
        class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-black/10 to-transparent"
      >
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-center">
        <div class="lg:col-span-7 space-y-8">
          <div
            class="inline-flex items-center gap-3 px-4 py-2 bg-gradient-to-r from-[#25c4ff]/10 to-[#ffcc33]/10 border border-[#ffcc33]/20 rounded-full reveal-fade-up shadow-sm"
          >
            <span
              class="w-2 h-2 bg-gradient-to-br from-[#25c4ff] to-[#ffcc33] rounded-full animate-pulse"
            ></span>
            <span
              class="text-[10px] font-bold uppercase tracking-[0.2em] text-gray-800"
              >Colaboraciones y Patrocinios</span
            >
          </div>

          <h2
            class="text-4xl md:text-6xl font-bold text-black leading-tight reveal-fade-up delay-100"
          >
            ¿Organizando un evento? <br />
            <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-black via-black to-black/40"
              >Impulsamos tu presencia digital.</span
            >
          </h2>

          <p
            class="text-xl text-gray-800 font-medium max-w-2xl leading-relaxed reveal-fade-up delay-150"
          >
            En <span class="text-black font-bold">Fantasma Digital</span>,
            amamos apoyar a la comunidad. Patrocinamos sitios web de alto
            impacto para eventos, torneos y ONGs. Hacemos que tu próximo
            proyecto sea legendario.
          </p>

          <div class="flex flex-wrap gap-8 pt-4 reveal-fade-up delay-200">
            <div class="flex items-center gap-4">
              <div
                class="w-10 h-10 rounded-full bg-black/5 flex items-center justify-center border border-black/10 text-[#25c4ff]"
              >
                <i class="fa-solid fa-check text-sm"></i>
              </div>
              <span
                class="text-sm font-bold uppercase tracking-widest text-gray-400"
                >Diseño a Medida</span
              >
            </div>
            <div class="flex items-center gap-4">
              <div
                class="w-10 h-10 rounded-full bg-black/5 flex items-center justify-center border border-black/10 text-[#ffcc33]"
              >
                <i class="fa-solid fa-check text-sm"></i>
              </div>
              <span
                class="text-sm font-bold uppercase tracking-widest text-gray-400"
                >Escalamiento Extremo</span
              >
            </div>
          </div>
        </div>

        <div class="lg:col-span-5 flex justify-center lg:justify-end">
          <div class="relative w-full max-w-sm reveal-scale-up delay-300">
            <!-- Interactive Call to Action Card -->
            <div
              class="bg-white border border-gray-100 p-4 lg:p-10 relative group-hover:border-[#ffcc33]/40 transition-all duration-500 shadow-[0_20px_50px_rgba(0,0,0,0.05)]"
            >
              <div
                class="absolute inset-0 bg-gradient-to-br from-[#25c4ff]/5 to-[#ffcc33]/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
              >
              </div>
              <h4 class="text-2xl font-bold text-black mb-4 relative z-10">
                Asóciate con nosotros
              </h4>
              <p class="text-gray-500 mb-8 font-light relative z-10">
                ¿Listo para un patrocinio? Contáctanos y cuéntanos sobre tu
                evento.
              </p>

              <a
                href="mailto:collabs@fantasma.digital"
                class="relative inline-flex items-center gap-4 py-4 px-8 bg-black text-white font-bold uppercase tracking-widest hover:bg-[#ffcc33] hover:text-black transition-all duration-300 w-full justify-center group/btn overflow-hidden animate-button-pulse"
              >
                <!-- Animated shimmer effect -->
                <div
                  class="absolute inset-0 -translate-x-full group-hover/btn:translate-x-full transition-transform duration-1000 bg-gradient-to-r from-transparent via-white/20 to-transparent"
                >
                </div>

                <!-- Pulsing glow -->
                <div
                  class="absolute inset-0 bg-gradient-to-r from-[#25c4ff]/30 via-[#ffcc33]/30 to-[#25c4ff]/30 opacity-0 blur-xl animate-glow"
                >
                </div>

                <span class="relative z-10">Contactar Colaboraciones</span>
                <i
                  class="relative z-10 fa-solid fa-paper-plane transform group-hover/btn:-translate-y-1 group-hover/btn:translate-x-1 transition-transform duration-300"
                ></i>
              </a>
            </div>
            <!-- Decorative elements -->
            <div
              class="absolute -top-4 -right-4 w-20 h-20 border-t-4 border-r-4 border-[#ffcc33]/60 pointer-events-none"
            >
            </div>
            <div
              class="absolute -bottom-4 -left-4 w-20 h-20 border-b-4 border-l-4 border-[#25c4ff]/60 pointer-events-none"
            >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Button Animations */
  @keyframes button-pulse {
    0%,
    100% {
      box-shadow: 0 0 0 0 rgba(255, 204, 51, 0);
    }
    50% {
      box-shadow: 0 0 0 8px rgba(255, 204, 51, 0.1);
    }
  }

  @keyframes glow {
    0%,
    100% {
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
  }

  .animate-button-pulse {
    animation: button-pulse 2s ease-in-out infinite;
  }

  .animate-glow {
    animation: glow 2s ease-in-out infinite;
  }
</style>

<script>
  const sponsorshipSection = document.querySelector("#sponsorship");

  const handleIntersection = (entries: IntersectionObserverEntry[]) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        document.body.classList.add("theme-light");
      } else {
        // Only remove if we are not scrolling into another light section
        // (This is simple logic, might need refinement if sections overlap)
        const rect = entry.boundingClientRect;
        if (rect.top > 0 || rect.bottom < window.innerHeight) {
          document.body.classList.remove("theme-light");
        }
      }
    });
  };

  if (sponsorshipSection) {
    const observer = new IntersectionObserver(handleIntersection, {
      threshold: 0,
      rootMargin: "-80px 0px -100% 0px", // Trigger closer to the top (where header is)
    });
    observer.observe(sponsorshipSection);
  }
</script>
