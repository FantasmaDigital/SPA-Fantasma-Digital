  // Carousel para agencia de desarrollo - TypeScript compatible
  class PremiumCarousel {
    private track: HTMLElement;
    private prevBtn: HTMLButtonElement;
    private nextBtn: HTMLButtonElement;
    private indicators: NodeListOf<HTMLButtonElement>;
    private progressBar: HTMLElement;
    private counter: HTMLElement;
    private cards: HTMLElement[];

    private config: any = {
      currentIndex: 0,
      cardWidth: 320,
      gap: 24,
      autoPlay: true,
      autoPlayInterval: 5000,
      transitionDuration: 700,
      enableInfinite: true,
      enableTouch: true,
      enableKeyboard: true,
    };

    private autoPlayTimer: number | null = null;
    private isAnimating: boolean = false;
    private touchStartX: number = 0;
    private touchEndX: number = 0;
    private totalCards: number;
    private visibleCards: number = 1;

    constructor() {
      this.track = document.getElementById("servicesTrack") as HTMLElement;
      this.prevBtn = document.querySelector(".nav-prev") as HTMLButtonElement;
      this.nextBtn = document.querySelector(".nav-next") as HTMLButtonElement;
      this.indicators = document.querySelectorAll(".carousel-indicator");
      this.progressBar = document.querySelector(
        ".carousel-progress"
      ) as HTMLElement;
      this.counter = document.querySelector(".carousel-counter") as HTMLElement;
      this.cards = Array.from(this.track.querySelectorAll(".service-card"));
      this.totalCards = this.cards.length;

      this.init();
    }

    private init(): void {
      this.calculateVisibleCards();
      this.setupEventListeners();
      this.updateUI();
      this.setActiveCard();

      if (this.config.autoPlay) {
        this.startAutoPlay();
      }
    }

    private calculateVisibleCards(): void {
      const width = window.innerWidth;
      if (width < 640) {
        this.visibleCards = 1;
      } else if (width < 768) {
        this.visibleCards = 2;
      } else if (width < 1024) {
        this.visibleCards = 3;
      } else {
        this.visibleCards = 4;
      }
    }

    private setupEventListeners(): void {
      // Botones de navegación
      this.prevBtn.addEventListener("click", () => this.prev());
      this.nextBtn.addEventListener("click", () => this.next());

      // Indicadores
      this.indicators.forEach((indicator) => {
        indicator.addEventListener("click", (e: Event) => {
          const target = e.currentTarget as HTMLButtonElement;
          const index = parseInt(target.dataset.index || "0");
          this.goTo(index);
        });
      });

      // Navegación por teclado
      if (this.config.enableKeyboard) {
        document.addEventListener("keydown", (e: KeyboardEvent) => {
          if (e.key === "ArrowLeft") this.prev();
          if (e.key === "ArrowRight") this.next();
        });
      }

      // Navegación táctil
      if (this.config.enableTouch) {
        this.track.addEventListener(
          "touchstart",
          (e: TouchEvent) => {
            this.touchStartX = e.touches[0].clientX;
            this.stopAutoPlay();
          },
          { passive: true }
        );

        this.track.addEventListener(
          "touchend",
          (e: TouchEvent) => {
            this.touchEndX = e.changedTouches[0].clientX;
            this.handleSwipe();
            this.startAutoPlay();
          },
          { passive: true }
        );
      }

      // Pausar auto-play al interactuar
      this.track.addEventListener("mouseenter", () => this.stopAutoPlay());
      this.track.addEventListener("mouseleave", () => this.startAutoPlay());

      // Responsive
      window.addEventListener("resize", () => {
        this.calculateVisibleCards();
        this.updateUI();
      });
    }

    private handleSwipe(): void {
      const swipeThreshold = 50;
      const swipeDistance = this.touchStartX - this.touchEndX;

      if (Math.abs(swipeDistance) > swipeThreshold) {
        if (swipeDistance > 0) {
          this.next();
        } else {
          this.prev();
        }
      }
    }

    private prev(): void {
      if (this.isAnimating) return;

      this.config.currentIndex = Math.max(0, this.config.currentIndex - 1);
      this.slideToIndex();
    }

    private next(): void {
      if (this.isAnimating) return;

      const maxIndex = Math.max(0, this.totalCards - this.visibleCards);
      this.config.currentIndex = Math.min(
        maxIndex,
        this.config.currentIndex + 1
      );
      this.slideToIndex();
    }

    private goTo(index: number): void {
      if (this.isAnimating || index === this.config.currentIndex) return;

      this.config.currentIndex = index;
      this.slideToIndex();
    }

    private slideToIndex(): void {
      this.isAnimating = true;

      // Calcular desplazamiento
      const card = this.cards[0];
      if (!card) return;

      const cardRect = card.getBoundingClientRect();
      const gap = parseInt(getComputedStyle(this.track).gap) || 24;
      const offset = this.config.currentIndex * (cardRect.width + gap);

      // Aplicar transformación
      this.track.style.transform = `translateX(-${offset}px)`;

      // Actualizar UI
      setTimeout(() => {
        this.updateUI();
        this.setActiveCard();
        this.isAnimating = false;
      }, this.config.transitionDuration);
    }

    private setActiveCard(): void {
      this.cards.forEach((card, index) => {
        if (
          index >= this.config.currentIndex &&
          index < this.config.currentIndex + this.visibleCards
        ) {
          card.classList.add("active");
        } else {
          card.classList.remove("active");
        }
      });
    }

    private updateUI(): void {
      // Actualizar botones
      const maxIndex = Math.max(0, this.totalCards - this.visibleCards);
      this.prevBtn.disabled = this.config.currentIndex === 0;
      this.nextBtn.disabled = this.config.currentIndex >= maxIndex;

      // Actualizar indicadores
      this.indicators.forEach((indicator, index) => {
        const isActive = index === this.config.currentIndex;
        indicator.style.width = isActive ? "32px" : "8px";
        indicator.style.backgroundColor = isActive
          ? "transparent"
          : "rgba(255, 255, 255, 0.3)";
        indicator.style.backgroundImage = isActive
          ? "linear-gradient(to right, #ffcc33, #25c4ff)"
          : "none";
      });

      // Actualizar barra de progreso
      if (this.progressBar) {
        const progress =
          ((this.config.currentIndex + this.visibleCards) / this.totalCards) *
          100;
        this.progressBar.style.width = `${progress}%`;
      }

      // Actualizar contador
      if (this.counter) {
        this.counter.textContent = (this.config.currentIndex + 1)
          .toString()
          .padStart(2, "0");
      }
    }

    private startAutoPlay(): void {
      if (!this.config.autoPlay || this.autoPlayTimer) return;

      this.autoPlayTimer = window.setInterval(() => {
        const maxIndex = Math.max(0, this.totalCards - this.visibleCards);
        if (this.config.currentIndex >= maxIndex) {
          this.goTo(0);
        } else {
          this.next();
        }
      }, this.config.autoPlayInterval);
    }

    private stopAutoPlay(): void {
      if (this.autoPlayTimer) {
        clearInterval(this.autoPlayTimer);
        this.autoPlayTimer = null;
      }
    }

    public destroy(): void {
      this.stopAutoPlay();
      // Limpieza de event listeners aquí
    }
  }

  // Inicializar cuando el DOM esté listo
  document.addEventListener("DOMContentLoaded", () => {
    new PremiumCarousel();
  });
