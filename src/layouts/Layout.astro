---
import "../styles/global.css";
import Header from "../components/layout/Header.astro";
import Preloader from "../components/ui/Preloader.astro";
const { title } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteName = "Fantasma Digital";
const fullTitle = `Fantasma Digital ${title ? title : "| Innovación y Software en El Salvador"}`;
const description =
  "Fantasma Digital es la agencia líder en desarrollo de software, diseño UX/UI y transformación digital en El Salvador. Creamos soluciones tecnológicas de alto impacto con equipos AI-native.";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="canonical" href={canonicalURL} />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/logo-blanco.png"
      media="(prefers-color-scheme: dark)"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/logo-negro.png"
      media="(prefers-color-scheme: light)"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO & Meta Tags -->
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Desarrollo de Software El Salvador, Agencia Digital, Diseño Web, Apps Móviles, Inteligencia Artificial, AI-native teams, Transformación Digital, UX/UI, Fantasma Digital, Soluciones Empresariales Centroamérica"
    />
    <meta name="author" content={siteName} />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="Spanish" />
    <meta name="revisit-after" content="7 days" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL("/og-image.jpg", Astro.site)} />
    <meta property="og:locale" content="es_SV" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta
      property="twitter:image"
      content={new URL("/og-image.jpg", Astro.site)}
    />

    <!-- JSON-LD Schema Markup -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "Fantasma Digital",
        "image": "https://fantasmadigital.dev/logo-blanco.png",
        "@id": "https://fantasmadigital.dev",
        "url": "https://fantasmadigital.dev",
        "telephone": "+50370425988",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Antiguo Cuscatlán",
          "addressLocality": "San Salvador",
          "addressRegion": "La Libertad",
          "postalCode": "1502",
          "addressCountry": "SV"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 13.6739,
          "longitude": -89.2367
        },
        "openingHoursSpecification": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "08:00",
          "closes": "18:00"
        },
        "sameAs": [
          "https://www.facebook.com/fantasmadigitalsv",
          "https://www.instagram.com/fantasmadigitalsv",
          "https://www.linkedin.com/company/fantasma-digital"
        ],
        "priceRange": "$$$",
        "servesCuisine": "",
        "description": "Agencia líder en desarrollo de software, diseño UX/UI y transformación digital en El Salvador.",
        "potentialAction": {
          "@type": "ReserveAction",
          "target": {
            "@type": "EntryPoint",
            "urlTemplate": "https://fantasmadigital.dev/#contact",
            "actionPlatform": [
              "http://schema.org/DesktopWebPlatform",
              "http://schema.org/IOSPlatform",
              "http://schema.org/AndroidPlatform"
            ]
          },
          "result": {
            "@type": "Reservation",
            "name": "Consultoría Gratuita"
          }
        }
      }
    </script>

    <title>
      Fantasma Digital {
        title || "| Agencia de Software y Diseño en El Salvador"
      }
    </title>
  </head>
  <body>
    <Preloader />
    <Header />
    <slot />
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // Reveal Animations
        const observerOptions = {
          root: null,
          rootMargin: "0px",
          threshold: 0.1,
        };

        const observer = new IntersectionObserver((entries, observer) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("reveal-active");
              if (!entry.target.hasAttribute("data-repeat")) {
                observer.unobserve(entry.target);
              }
            } else {
              if (entry.target.hasAttribute("data-repeat")) {
                entry.target.classList.remove("reveal-active");
              }
            }
          });
        }, observerOptions);

        const animatedElements =
          document.querySelectorAll('[class*="reveal-"]');
        animatedElements.forEach((el) => observer.observe(el));

        // Parallax Effect
        const parallaxElements = document.querySelectorAll("[data-parallax]");

        if (parallaxElements.length > 0) {
          window.addEventListener("scroll", () => {
            parallaxElements.forEach((el) => {
              const htmlEl = el as HTMLElement;
              const speed = parseFloat(
                htmlEl.getAttribute("data-speed") || "0.1"
              );
              const rect = htmlEl.getBoundingClientRect();
              const isVisible =
                rect.top < window.innerHeight && rect.bottom > 0;

              if (isVisible) {
                // Calculate distance from center of viewport
                const center = window.innerHeight / 2;
                const elementCenter = rect.top + rect.height / 2;
                const distanceFromCenter = center - elementCenter;

                // Apply transform
                // We use translate3d for better performance
                htmlEl.style.transform = `translate3d(0, ${distanceFromCenter * speed}px, 0)`;
              }
            });
          });
        }
      });

      // Smooth Scroll for CTA Links
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", (e) => {
          const href = anchor.getAttribute("href");
          if (!href || href === "#") return;

          e.preventDefault();
          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);

          if (targetElement) {
            const headerOffset = 80; // Adjust based on your header height
            const elementPosition = targetElement.getBoundingClientRect().top;
            const offsetPosition =
              elementPosition + window.pageYOffset - headerOffset;

            window.scrollTo({
              top: offsetPosition,
              behavior: "smooth",
            });
          }
        });
      });
    </script>
  </body>
</html>

<style>
  html {
    margin: 0;
    width: 100%;
    height: 100%;
  }
  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
  }
</style>
